<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">


    <ImageView
        android:id="@+id/img_main"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@mipmap/meizi"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription"
        />
    
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2018年10月27、28日周杰伦泉州演唱会,泉州海峡体育馆开唱。"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_main"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:maxLines="2"
        />
    <ImageView
        android:id="@+id/iv_person"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toEndOf="@+id/img_main"
        android:src="@drawable/ic_assignment_ind"
        android:tint="@color/colorAccent"
        />
    <TextView
        android:id="@+id/tx_name"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:text="周傑倫"
        app:layout_constraintStart_toEndOf="@+id/iv_person"
        app:layout_constraintTop_toTopOf="@+id/iv_person"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/iv_favorite"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_person"
        app:layout_constraintStart_toEndOf="@+id/img_main"
        android:src="@drawable/ic_date"
        android:tint="@color/colorAccent"
        />
    <TextView
        android:id="@+id/tx_favorite"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:textSize="11sp"
        android:text="9999"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@+id/iv_favorite"
        app:layout_constraintTop_toTopOf="@+id/iv_favorite"
        />

    <ImageView
        android:id="@+id/iv_seat"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@+id/iv_favorite"
        app:layout_constraintStart_toEndOf="@+id/tx_favorite"
        android:src="@drawable/ic_seat"
        android:tint="@color/colorAccent"
        />
    <TextView
        android:id="@+id/tv_seat"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:text="125区8排8号"
        android:textSize="11sp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@+id/iv_seat"
        app:layout_constraintTop_toTopOf="@+id/iv_seat"
        app:layout_constraintEnd_toEndOf="parent"
        />
</android.support.constraint.ConstraintLayout>